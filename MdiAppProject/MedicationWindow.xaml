<Window x:Class="MdiAppProject.MedicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MdiAppProject"
        mc:Ignorable="d"
        Title="MedicationWindow" Height="450" Width="800">
	<Canvas>
		<Button Content="Add" Canvas.Left="118" Canvas.Top="34" Height="28" Width="102" FontSize="18" FontFamily="Verdana" HorizontalAlignment="Left" VerticalAlignment="Center"></Button>
		<Button Content="View Adherence Tracker" Canvas.Left="500" Canvas.Top="25" Height="39" Width="241" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Verdana" FontSize="18"></Button>
		<Button Content="Edit" Canvas.Left="123" Canvas.Top="363" Height="31" Width="118" FontFamily="Verdana" FontSize="18"/>
		<Button Content="View Schedule" Canvas.Left="560" Canvas.Top="371" Height="35" Width="170" FontFamily="Verdana" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
		<DataGrid x:Name="grdMedications" Height="215" Canvas.Left="63" Canvas.Top="99" Width="662" ItemsSource="{Binding Medication}"/>
	</Canvas>
</Window>
